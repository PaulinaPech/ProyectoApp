<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Articulos</title>
    <!--Maps-->
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>

        <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <!-- CSS -->
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/alertify.min.css"/>
        <!-- Default theme -->
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/themes/default.min.css"/>
    <style>

        body{
            background-color: #f7f6f6;
        }
        table thead{
            background-color: #012c40;
            color: white;
        }
        #map {
	height: 500px;
	width: 60%;
    align-items: center;
    }

    </style>
</head>
<body>
   <!--navegador-->
    <nav class="navbar navbar-dark bg-dark">
    <center><h1 href="/" class="navbar-brand">Inventario</h1></center>
    </nav>
    <!--Api de facebook-->
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/es_LA/sdk.js#xfbml=1&version=v15.0" nonce="SlP8Y7Vc"></script>
    <nav class="navbar navbar-dark bg-dark">
    </nav>
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-7">
            <table class="table mt-2 table-bordered table-striped">
                <thead>
                 <tr class="text-center">
                 <td>Id</td>
                 <td>Nombre</td>
                 <td>Precio</td>
                 <td>Stock</td>
                 <td>Acciones</td>
                </tr>
                </thead>
                <tbody>
                    <% if (data) { %>
                        <% for(var i = 0; i < data.length; i++) { %>
                          <tr>
                            <td><%= (i + 1) %></td>
                            <td><%= data[i].nombreArticulo %></td>
                            <td><%= data[i].precio %></td>
                            <td><%= data[i].stock %></td>
                            <td>
                                <a href="/delete/<%= data[i].idArticulo %>" class="btn btn-danger">Eliminar</a>
                                <a href="/update/<%= data[i].idArticulo %>" class="btn btn-info">Actualizar</a>
                            </td>
                            <% } %>
                            <% } %>
                </tbody>
            </table>
            </div>
            <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group">
                        <input type="text" name="nombreArticulo" placeholder="Articulo" class="from-control">
                        </div>
                        <div class="form-group">
                         <input type="text" name="precio" placeholder="Precio" class="from-control">
                         </div>
                         <div class="form-group">
                             <input type="text" name="stock" placeholder="Stock" class="from-control">
                             </div>
                             <button type="submit" class="btn btn-primary">
                             Guardar Articulo
                             </button>
                        </form>
                </div>
            </div>
            </div>

</div>
</div>

<div id="map"></div>
<script>
    function iniciarMap(){
        var coord = {lat:20.962315 ,lng: -89.646910};
        var map = new google.maps.Map(document.getElementById('map'),{
          zoom: 10,
          center: coord
        });
        var marker = new google.maps.Marker({
          position: coord,
          map: map
        });
    }
        </script>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBDaeWicvigtP9xPv919E-RNoxfvC-Hqik&callback=iniciarMap"></script>
